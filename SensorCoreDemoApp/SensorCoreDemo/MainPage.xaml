<Page
    x:Class="SensorCoreDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SensorCoreDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:Name="RecordButton" Content="Record step count" Click="RecordSteps_Click" HorizontalAlignment="Center"/>
            <!--<Button x:Name="Start" Content="Start tracking activities" Click="StartButton_Click" />-->
            <TextBlock FontSize="48" FontWeight="Light" Margin="0,10" HorizontalAlignment="Center" Text="Walking steps:"/>
            <TextBlock Name="WalkingStepCountText" FontSize="96" FontWeight="Light" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBlock FontSize="48" FontWeight="Light" Margin="0,20,0,10" HorizontalAlignment="Center" Text="Running steps:"/>
            <TextBlock Name="RunningStepCountText" FontSize="96" FontWeight="Light" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Name="ActivityText" FontSize="72" FontWeight="Light" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
